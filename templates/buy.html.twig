{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Buy tickets'|trans }}
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <a href="{{ path('app_view_event_public', {'id': event.id}) }}" class="btn btn-secondary">{{ 'Go to event'|trans }}</a>
            <div class="card mt-2">
                <div class="card-body">
                    <h5 class="card-title">{{ 'Buy a ticket to event %event%'|trans({'%event%': event.name}) }}</h5>

                    <p>{{ 'Payment will be processed separately. More information in event details.'|trans }}</p>

                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.firstName) }}
                        </div>
                        <div class="col">
                            {{ form_row(form.lastName) }}
                        </div>
                    </div>
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-primary">{{ 'Buy'|trans }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
